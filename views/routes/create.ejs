<% layout('./boilerplate') -%>
<div class="flex justify-center  ">
    <form action="/note" method="post" class="bg-slate-600 p-3 rounded-2xl shadow-md">
        <label for="title">Title</label> <br>
        <input
            type="text"
            placeholder="Type here"
            name="title"
            class="input input-bordered input-info w-full max-w-xs" /> <br><br>

        <label for="note">Notes</label> <br>
        <div class="flex flex-col">
            <textarea
                class="textarea textarea-info w-[340px] lg:w-[900px] overflow-hidden resize-none"
                placeholder="Bio"
                name="note"
                oninput="this.style.height = 'auto'; this.style.height = this.scrollHeight + 'px';"></textarea>
                <button class="btn btn-sm btn-success mt-6 self-end">Save This Notes</button>
        </div>
    </form>
</div>



